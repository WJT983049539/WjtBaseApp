<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.privatee.wjtbaseapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/aaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:text="Hello World!" />


        <com.privatee.mylibrary.Widge.NumberProgressBar
            android:id="@+id/numberbar1"
            style="@style/NumberProgressBar_Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            custom:progress_current="0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome_button"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/welcome_button"
            android:text="测试"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="188dp" />

        <Button
            android:id="@+id/welcome_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/numberbar1"
            android:text="欢迎页测试下"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="290dp" />

        <Button
            android:id="@+id/toast_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numberbar1"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/textView"
            android:text="Toast测试" />

        <Button
            android:id="@+id/webview_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aaa"
            android:layout_toStartOf="@+id/textView"
            android:text="webView测试" />

        <Button
            android:id="@+id/retrofit_rx_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/webview_button"
            android:layout_alignBottom="@+id/webview_button"
            android:layout_alignStart="@+id/toast_button"
            android:text="retrofit_Rxjava测试" />

        <Button
            android:id="@+id/Sysatem_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/webview_button"
            android:layout_marginTop="21dp"
            android:text="开关机设定" />

        <Button
            android:id="@+id/kk_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Sysatem_button"
            android:layout_alignEnd="@+id/toast_button"
            android:text="测试小刀" />

        <Button
            android:id="@+id/recycle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Sysatem_button"
            android:layout_below="@+id/Sysatem_button"
            android:layout_marginTop="16dp"
            android:text="RecyclerView测试" />

        <Button
            android:id="@+id/gotwo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/recycle_button"
            android:layout_alignEnd="@+id/kk_button"
            android:text="调到two" />

        <Button
            android:id="@+id/progtess_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/recycle_button"
            android:layout_marginTop="23dp"
            android:text="进度条弹窗测试" />

        <Button
            android:id="@+id/action_barr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/retrofit_rx_button"
            android:layout_alignTop="@+id/progtess_button"
            android:text="bar测试" />

        <Button
            android:id="@+id/download_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/progtess_button"
            android:layout_marginTop="30dp"
            android:text="下载器测试" />

        <Button
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/download_button"
            android:layout_alignEnd="@+id/action_barr"
            android:text="分享测试" />

        <Button
            android:id="@+id/tcp_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/share_button"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/gotwo_button"
            android:text="长连接" />

        <Button
            android:id="@+id/qrcode_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二维码测试"
            android:layout_alignBaseline="@+id/action_barr"
            android:layout_alignBottom="@+id/action_barr"
            android:layout_alignStart="@+id/tcp_button" />

    </RelativeLayout>
</LinearLayout>
